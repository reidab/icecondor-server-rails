<% content_for :header do %>
<style>
body {
  margin: 0px;
  padding: 0px;
  font-family: "Lucida Grande", "Lucida Sans Unicode", Verdana, sans-serif;
  overflow: hidden;
}

div.heading {
  position: absolute;
  z-index: 10;
  background: white;
  opacity: 0.75;
  border: 1px solid #555;
  margin-left: 40px;
  margin-top: 10px;
}
p#subtitle {
  font-size: 80%;
}
p#subtitle a {
  font-size: 12pt;
}

.heading p#title a {
  font-size: 26pt;
  font-weight: bold;
  color: black;
  text-decoration: none;
  border-bottom: 2px dotted #333;
  margin-right: 10px;
}

.heading p {
  margin: 10px 10px 0px 10px;
  font-size: 16pt;
}
div.topfive {
  position: fixed; 
  z-index: 10;
  background: white;
  opacity: 0.75;
  border: 1px solid #555;
  bottom: 50px;
  margin-left: 40px;
}
div.topfive p{
  margin-bottom: 0px;
  margin-top: 0px;
  margin-left: 5px;
}
</style>
<% end %>

<div class="heading">
  <p id="title">
    <a href="http://donpark.org/wiki/icecondor">IceCondor</a> <br/>
  </p>
  <p id="subtitle">
  Continuous location tracking. <br/>
  Android G1 users <%= link_to "download here", :controller => :dashboard, :action => :clients %>
  </p>
  <%= flash[:notice] %>
  <p>
    Recent Public Updates
    <table>
    <% @locations.each do |ary| %>
      <tr>
          <td><%= image_tag "http://labs.google.com/ridefinder/images/mm_20_#{MapHelper::COLORS[ary.last.user.id % MapHelper::COLORS.size]}.png" %></td>
          <td><%= link_to ary.last.user.openidentities.first.url, "/locations.html?id=#{ary.last.user.openidentities.first.url}" %></td>
          <td> <%= time_ago_in_words(ary.first.timestamp) %> ago </td></tr>
    <% end %>
    </table>
  </p>
</div>


<%= google_map(@locations, :width => "100%", :height => "500px", 
               :controls => [:zoom],
               :inject_on_load => <<__JS__, :partial => "location") 
__JS__
%>
