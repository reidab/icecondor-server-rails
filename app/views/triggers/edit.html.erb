Edit a Trigger
<% semantic_form_for @trigger do |form| %>
  <% form.inputs :name => "Action #{@trigger.action.titleize}" do %>
    <% case @trigger.action 
       when "foursquare" %>
       Check into
       <% centerpoint = @trigger.fence.centerpoint %>
       <%= current_user.foursquare.venues :geolat => centerpoint[:latitude], 
                                          :geolong => centerpoint[:longitude], 
                                          :limit => 10 %>
       <%= form.input :extra, :as => :select, :collection => [["Some Venue", "venue"]] %>
    <% when "email" %>
       <%= form.input :extra, :label => "Email Address" %>
    <% end %>
  <% end %>
  <%= form.buttons %>
<% end %>
