<% semantic_form_for @trigger do |form| %>
  <% form.inputs :name => "Action #{@trigger.action.titleize}" do %>
    <% case @trigger.action 
       when "foursquare" %>
       <%= form.input :extra, :as => :select, :collection => [["Some Venue", "venue"]] %>
    <% when "email" %>
       <%= form.input :extra, :label => "Email Address" %>
    <% end %>
  <% end %>
  <%= form.buttons %>
<% end %>
